{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "lerna run --stream --sort prepare",    
    "build:icons": "node ./script/build.js --input assets/icons/**/*.svg --output build/data.json && cp -r assets/icons build/svg",
    "clean": "node ./scripts/clean.js",
    "format": "prettier --write \"**/*.js{,on}\" \"**/*.md\"  \"**/*.mdx\"",
    "svgo": "svgo icons --config .svgo.yml",
    "alticons:node": "yarn workspace @nymeia/alticons",
    "alticons:react": "yarn workspace @nymeia/alticons-react" 
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@altairtv/prettier-config": "^0.0.1",
    "microbundle": "^0.12.3",
    "cheerio": "^1.0.0-rc.3",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "js-yaml": "^3.14.0",
    "lerna": "^3.22.1",
    "lodash.merge": "^4.6.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "svgo": "^1.3.2",    
    "trim-newlines": "^3.0.0",
    "yargs": "^15.4.1"
  }
}
